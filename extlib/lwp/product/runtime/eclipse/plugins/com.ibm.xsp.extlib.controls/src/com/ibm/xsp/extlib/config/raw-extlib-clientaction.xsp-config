<faces-config>

  <faces-config-extension>
    <namespace-uri>http://www.ibm.com/xsp/coreex</namespace-uri>
    <default-prefix>xe</default-prefix>
  </faces-config-extension>
	
<!-- CLIENT SIDE ACTIONS  -->	
    <complex-type>
        <description>Displays an alert pop-up dialog which shows a message and takes focus away from the current window</description>
        <display-name>Alert</display-name>
        <complex-id>com.ibm.xsp.extlib.actions.client.AlertClientAction</complex-id>
        <complex-class>com.ibm.xsp.extlib.actions.client.AlertClientAction</complex-class>
		<property>
			<description>Text to be displayed in the pop-up alert dialog</description>
			<display-name>Text</display-name>
			<property-name>text</property-name>
			<property-class>java.lang.String</property-class>
			<property-extension>
				<localizable>true</localizable>
			</property-extension>
		</property>
        <complex-extension>
      		<base-complex-id>simpleActionInterface</base-complex-id>
			<tag-name>alertAction</tag-name>
            <designer-extension>
                <action-type>client</action-type>
                <category>%complex-category.basic%</category>
            </designer-extension>
        </complex-extension>
    </complex-type>

</faces-config>
